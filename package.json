{
  "name": "@cmdcode/signer",
  "description": "Software signing device and reference implementation of the Signer API.",
  "author": "Christopher Scott",
  "license": "CC-BY-1.0",
  "keywords": [
    "crypto",
    "signer",
    "library"
  ],
  "version": "1.1.18",
  "type": "module",
  "main": "./dist/main.cjs",
  "unpkg": "./dist/browser.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cmdruid/signer.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "files": [
    "README.md",
    "LICENSE",
    "dist",
    "src"
  ],
  "scripts": {
    "build": "rollup -c rollup.config.ts --configPlugin typescript",
    "clean": "rm -rf dist/* coverayarn typesge .nyc_output",
    "lint": "eslint . --ext .ts",
    "release": "yarn clean && yarn test && yarn lint && yarn types && yarn build",
    "scratch": "tsx test/scratch.ts",
    "test": "tsx test/tape.ts",
    "types": "tsc"
  },
  "dependencies": {
    "@cmdcode/buff": "^2.0.3",
    "@cmdcode/crypto-tools": "^2.5.0",
    "@cmdcode/musig2": "^2.3.0",
    "@scrow/tapscript": "^2.0.16"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.4",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-terser": "^0.4.0",
    "@rollup/plugin-typescript": "^11.1.3",
    "@types/node": "^20.6.3",
    "@types/tape": "^5.6.1",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "eslint": "^8.49.0",
    "eslint-config-standard-with-typescript": "^39.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^16.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "rollup": "^3.29.2",
    "tape": "^5.6.1",
    "tslib": "^2.6.2",
    "tsx": "^3.12.10",
    "typescript": "^5.1.6"
  }
}
