{
  "name": "@cmdcode/signer",
  "description": "Software signing device and reference implementation of the Signer API.",
  "author": "Christopher Scott",
  "license": "CC-BY-1.0",
  "keywords": [
    "crypto",
    "signer",
    "library"
  ],
  "version": "1.1.3",
  "type": "module",
  "main": "./dist/main.cjs",
  "unpkg": "./dist/browser.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/module.mjs"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cmdruid/signer.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "files": [
    "README.md",
    "LICENSE",
    "dist",
    "src"
  ],
  "scripts": {
    "build": "rollup -c rollup.config.ts --configPlugin typescript",
    "clean": "rm -rf dist/* coverayarn typesge .nyc_output",
    "lint": "eslint . --ext .ts",
    "release": "yarn clean && yarn test && yarn lint && yarn types && yarn build",
    "scratch": "tsx test/scratch.ts",
    "test": "tsx test/tape.ts",
    "types": "tsc"
  },
  "devDependencies": {
    "@cmdcode/buff-utils": "^1.12.6",
    "@cmdcode/crypto-utils": "^2.3.12",
    "@cmdcode/musig2": "^2.1.5",
    "@rollup/plugin-commonjs": "^23.0.2",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-terser": "^0.4.0",
    "@rollup/plugin-typescript": "^9.0.2",
    "@types/node": "^18.13.0",
    "@types/tape": "^4.13.2",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.52.0",
    "eslint": "^8.31.0",
    "eslint-config-standard-with-typescript": "^26.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.6.0",
    "eslint-plugin-promise": "^6.1.1",
    "rollup": "^3.2.3",
    "tape": "^5.6.1",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6"
  }
}
