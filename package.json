{
  "name": "@cmdcode/signer",
  "description": "Signer, Wallet and other tools for cryptography.",
  "author": "Christopher Scott",
  "license": "CC-BY-1.0",
  "keywords": [
    "bitcoin",
    "nostr",
    "crypto",
    "signer",
    "library"
  ],
  "version": "1.4.0",
  "type": "module",
  "main": "./dist/main.cjs",
  "unpkg": "./dist/script.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/main.cjs"
      }
    },
    "./cred": {
      "import": "./dist/lib/cred.js",
      "types": "./dist/lib/cred.d.ts",
      "default": "./dist/lib/cred.js"
    },
    "./seed": {
      "import": "./dist/lib/seed.js",
      "types": "./dist/lib/seed.d.ts",
      "default": "./dist/lib/seed.js"
    },
    "./token": {
      "import": "./dist/lib/token.js",
      "types": "./dist/lib/token.d.ts",
      "default": "./dist/lib/token.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cmdruid/signer.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "files": [
    "README.md",
    "LICENSE",
    "dist",
    "src"
  ],
  "scripts": {
    "build": "./build.sh",
    "release": "yarn test && yarn build",
    "scratch": "yarn load test/scratch.ts",
    "load": "tsx --tsconfig test/tsconfig.json",
    "test": "yarn tsc && yarn load test/tape.ts"
  },
  "dependencies": {
    "@cmdcode/buff": "^2.2.4",
    "@cmdcode/crypto-tools": "^2.7.5",
    "@cmdcode/musig2": "^2.4.1",
    "@noble/ciphers": "^0.4.1",
    "@scrow/tapscript": "^2.2.0",
    "@scure/bip32": "^1.3.2",
    "@scure/bip39": "^1.2.1"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/node": "^20.11.6",
    "@types/tape": "^5.6.4",
    "rollup": "^4.9.6",
    "tape": "^5.7.3",
    "tslib": "^2.6.2",
    "tsx": "^4.3.0",
    "typescript": "^5.3.2"
  }
}
